{% extends 'base.html.twig' %}

{% block title %}Utilisateur - {{ user.username }} - {{ parent() }} {% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
    <table class="table table-dark">
        <thead>
            <tr>
            <th scope="col">Nom</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            <th scope="row">{{ user.username }}</th>
            <td>
                <a href="{{ path('admin_edit_users', {'id': user.id}) }}">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                </a>
            </td>
            </tr>
        </tbody>
        </table>
    </div>
    <a href="{{ path('admin_show_users') }}" class="previous-link col-12 text-center">Liste des utilisateurs</a>
</div>
{% endblock %}
