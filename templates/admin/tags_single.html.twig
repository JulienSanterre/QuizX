{% extends 'base.html.twig' %}

{% block title %}Tag - {{ tag.name }} - {{ parent() }} {% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
    <table class="table table-dark">
        <thead>
            <tr>
            <th scope="col">Nom</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            <th scope="row">{{ tag.name }}</th>
            <td>
                <a href="{{ path('admin_edit_tags', {'id': tag.id}) }}">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                </a>
                <a href="{{ path('admin_delete_tags', {'id': tag.id}) }}">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                </a>
            </td>
            </tr>
        </tbody>
        </table>
    </div>
    <a href="{{ path('admin_show_tags') }}" class="previous-link col-12 text-center">Liste des tags</a>
</div>
{% endblock %}
