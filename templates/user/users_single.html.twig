{% extends 'base.html.twig' %}

{% block title %}Utilisateur - {{ user.username }} - {{ parent() }} {% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
    <table class="table table-dark">
        <thead>
            <tr>
            <th scope="col">Nom</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            <th scope="row">
                <a href="{{ path('users_show_single', {'id': user.id}) }}">
                    {{ user.username }}
                </a>
                {% if user.id == currentUser.id %}
                    <a href="{{ path('users_edit', {'id': currentUser.id}) }}">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    </a>
                {% endif %}
            </th>
            </tr>
        </tbody>
        </table>
    </div>
     <a href="{{ path('users_show') }}" class="previous-link col-12 text-center">Liste des utilisateurs</a>
</div>
{% endblock %}
